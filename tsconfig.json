{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@spartan-ng/ui-button-helm": [
        "./src/libs/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./src/libs/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-tooltip-helm": [
        "./src/libs/ui/ui-tooltip-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "./src/libs/ui/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/ui-avatar-helm": [
        "./src/libs/ui/ui-avatar-helm/src/index.ts"
      ],
      "@spartan-ng/ui-separator-helm": [
        "./src/libs/ui/ui-separator-helm/src/index.ts"
      ],
      "@spartan-ng/ui-formfield-helm": [
        "./src/libs/ui/ui-formfield-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "./src/libs/ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-sonner-helm": [
        "./src/libs/ui/ui-sonner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-alert-helm": [
        "./src/libs/ui/ui-alert-helm/src/index.ts"
      ],
      "@spartan-ng/ui-spinner-helm": [
        "./src/libs/ui/ui-spinner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-badge-helm": [
        "./src/libs/ui/ui-badge-helm/src/index.ts"
      ],
      "@spartan-ng/ui-tabs-helm": [
        "./src/libs/ui/ui-tabs-helm/src/index.ts"
      ],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
